<!DOCTYPE html>
<html>
  <head>
    <title>Collabz</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="userinfo">
      <%= link_to 'Home', projects_path %> <br>
      <% if current_user %>
        Signed in as <%= current_user.name %>. <br>
        <%= link_to 'Log out', session_path("current"), :method => :delete %> <br>
        <%= link_to 'New Project', new_project_path %>
      <% else %>
        <%= link_to 'Log in', new_session_path %> or <%= link_to 'Sign up', new_user_path %>
      <% end %>
    </p>
    <%= yield %>
  </body>
</html>
