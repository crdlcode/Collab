<% if project.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>
     <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="new">
  <%= form_for(project) do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :image %>
    <%= f.file_field :image %>
  </p>
  <p>
    <%= f.label :looking_for %>
    <input placeholder="Add a role..." class="add-role--input" />
    <input name="project[looking_for]" type="hidden" class="roles" value="<%= @project.looking_for.join(',') %>" />

    <button class="add-role--button">Add</div>
    <div class="roles--container">
      <% @project.looking_for.each do |role| %>
        <button type="button" name="button" onclick="deleteRole(this)"><%= role %></button>
      <% end %>
    </div>
  </p>
</div>
<div class="categories-container">
  <%= f.label "Project Category", :class => 'project-category'%> <br>
  <%= f.collection_check_boxes :categories, Category.all, :id, :category_type, include_hidden: false %>
  <p>
    <%= f.submit "ProjectSpace It!" %>
  </p>
</div>
<% end %>
