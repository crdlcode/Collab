
  <div class="title">
    <h1>ProjectSpace</h1>
  </div>

  <p>
    <%= form_tag categories_path, method: :post do %>
      <%= select_tag "category_id", options_from_collection_for_select(Category.all, "id", "category_type") %>
      <%= submit_tag 'Filter by Category' %>
    <% end %>
  </p>

  <% if @projects.length == 0 %>
    <h3>NO PROJECTS</h3>
  <% else %>
    <% @projects.each do |project| %>
      <article class="project">
        <%= link_to project, class: 'project-link' do %>
        <figure class="project-image">
          <% if project.image %>
            <%= image_tag project.image %>
          <% else %>
            <%= "no-image" %>
          <% end %>
        </figure>
        <p>
          <%= link_to "#{project.name}", project_path(project) %>
        </p>
      </div>
    <% end %>
  <% end %>
  <% end %>
