  <p>
    <%= form_tag categories_path, method: :post do %>
      <%= select_tag "category_id", options_from_collection_for_select(Category.all, "id", "category_type") %>
      <%= submit_tag 'Filter by Category' %>
    <% end %>
  </p>

  <% if @projects.length == 0 %>
    <h3>NO PROJECTS</h3>
  <% else %>
    <div class="latest-projects">
      <h1>Latest Projects</h1>
      <div class="latest-projects-container">
        <% @latest_projects.each do |project| %>
        <article class="project-item">
          <figure class="project-image">
            <% if project.image && project.image != "" %>
                <%= image_tag project.image %>
            <% else %>
              <%= link_to project_path(project) do %>
                <%= image_tag "default.jpg" %>
              <% end %>
            <% end %>
          </figure>
          <p>
            <%= link_to "#{project.name}", project_path(project) %>
          </p>
        </article>
      <% end %>
      </div>
    </div>

    <div class="other-projects">
      <h1>More Projects</h1>
      <div class="projects-container">
        <% @projects.each do |project| %>
          <article class="project-item">
            <figure class="project-image">
              <% if project.image && project.image != "" %>
                <%= image_tag project.image %>
              <% else %>
                <%= link_to project_path(project) do %>
                  <%= image_tag "default.jpg" %>
                <% end %>
              <% end %>
            </figure>
            <p>
              <%= link_to "#{project.name}", project_path(project) %>
            </p>
          </article>
        <% end %>
      </div>
    </div>
  <% end %>
